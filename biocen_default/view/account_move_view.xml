<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<!--Main Account Move FORM view-->
	<record id="custom_account_mover_form_view" model="ir.ui.view">
        <field name="name">custom_account_move_form_view</field>
		<field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
		<field name="arch" type="xml">
			<xpath expr="//field[@name='payment_reference']" position="after">
                <field name="usd_currency_rate" string="Tipo de Cambio" widget='monetary' options="{'currency_field': 'currency_id'}"/>
            </xpath>
		</field>
	</record>
</odoo>
