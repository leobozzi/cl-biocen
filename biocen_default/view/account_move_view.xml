<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<!--Main Account Move TREE view-->
	<record id="custom_account_move_tree_view" model="ir.ui.view">
        <field name="name">custom_account_move_tree_view</field>
		<field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree"/>
		<field name="arch" type="xml">
			<xpath expr="//field[@name='amount_total_signed']" position="after">
                <field name="usd_total" string="Total en USD" sum="Total en USD" optional="hide"/>
            </xpath>
            <xpath expr="//field[@name='amount_residual_signed']" position="after">
                <field name="usd_residual" string="Importe adeudado en USD" sum="Importe adeudado en USD" optional="hide"/>
            </xpath>
		</field>
	</record>
</odoo>
