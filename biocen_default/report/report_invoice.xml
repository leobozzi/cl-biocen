<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Factura ElectrÃ³nica Moneda -->
        <template id="account_report_invoice_document" inherit_id="account.report_invoice_document">
            <t t-set="o" t-value="o.with_context(lang=lang)" />

            <xpath expr="//div[@id='total']/div" position="before">
                <t t-if="o.currency_id == o.company_id.currency_id">
                    <t t-if="o.l10n_ar_afip_concept != '2'">
                        <br />
                        <strong>Tipo de Cambio: </strong>
                        <span
                            t-esc="'%s ' % (o.currency_id.name)" />
                        <span t-field="o.usd_currency_rate" />
                        <strong> - Total: </strong>
                        <span
                            t-esc="'USD '" />
                        <span t-field="o.usd_total" />
                    </t>
                </t>
            </xpath>

        </template>
    </data>
</odoo>